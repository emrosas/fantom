---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div>
  <Icon name={icon} class="size-10 mb-4" />
  <h3 class="text-xl font-display mb-2">{title}</h3>
  <p class="leading-relaxed opacity-60 font-medium text-balance">
    {description}
  </p>
</div>

---
import { Icon } from "astro-icon/components";
import { type Service } from "../utils/services";

interface Props {
  service: Service;
}

const { service } = Astro.props;
const { icon, title, description } = service;
---

<div>
  <Icon name={icon} class="size-10 mb-4" />
  <h3 class="text-xl font-display mb-2">{title}</h3>
  <p class="leading-relaxed opacity-60 font-medium text-balance">
    {description}
  </p>
</div>

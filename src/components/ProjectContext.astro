---
import { type Project } from "../utils/projects";

const { name, tags, description } = Astro.props as Project;
---

<li class="absolute inset-0 opacity-5 mt-16" id={name}>
  <h3 class="text-2xl mb-4">{name}</h3>
  <ul class="flex items-center gap-2 mb-3 flex-wrap max-w-prose">
    {
      tags.map((tag) => (
        <li class="rounded-full border-dashed border border-brand-1 px-4 py-1 font-light text-xs">
          {tag}
        </li>
      ))
    }
  </ul>
  <p class="max-w-prose text-sm leading-loose">{description}</p>
</li>

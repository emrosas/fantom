---
interface Props {
  title: string;
  description: string;
  sectionName: string;
  sectionNumber: number;
}

const { title, description, sectionName, sectionNumber } = Astro.props;
---

<div
  class="grid grid-cols-2 gap-6 items-end border-b-brand border-solid pb-16 border-b-2"
>
  <h2 class="text-6xl font-display col-start-1">{title}</h2>
  <p class="text-2xl max-w-[40ch] col-start-1 row-start-2 leading-relaxed">
    {description}
  </p>
  <span class="uppercase text-end row-span-2 text-2xl"
    >[0{sectionNumber}. {sectionName}]</span
  >
</div>

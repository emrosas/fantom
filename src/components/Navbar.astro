---
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
---

<header
  id="nav"
  class="sticky left-0 right-0 top-0 z-50 flex h-nav flex-col gap-6 border-b border-light border-opacity-10 bg-dark bg-opacity-75 py-6 backdrop-blur ~px-4/20 sm:h-auto sm:flex-row sm:items-center"
>
  <a
    href="/"
    class="transition duration-300 ease-out hover:-translate-y-[2px] hover:text-white"
  >
    <Icon name="logo" class="hidden h-6 w-32 text-light sm:block" />
    <Icon name="eyes" class="size-8 text-light sm:hidden" />
  </a>
  <button class="menu-toggle z-50" id="menu-toggle"
    ><Icon name="burger" class="size-9 sm:hidden" /></button
  >
  <nav class="hidden flex-grow sm:flex sm:items-center sm:justify-between">
    <ul class="flex flex-col gap-4 sm:flex-row sm:gap-8">
      <li class="font-light">
        <a href="/#services">Servicios</a>
      </li>
      <li class="font-light">
        <a href="/#projects">Proyectos Destacados</a>
      </li>
      <li class="font-light">
        <a href="#contact">Contactos</a>
      </li>
    </ul>
    <Button type="button" proposal icon="arrow-fwd" intent={"secondary"}
      >Solicitar Cotizaci√≥n</Button
    >
  </nav>
</header>
<div
  id="menu-bg"
  class="menu-toggle fixed inset-0 z-40 hidden bg-dark bg-opacity-60 opacity-0 backdrop-blur"
>
</div>

<script>
  import { gsap } from "gsap";
  if (window.matchMedia("(max-width: 39.99rem)").matches) {
    const tl = gsap.timeline({ paused: true });

    tl.to("#menu-bg", {
      display: "block",
      opacity: 1,
      duration: 0.25,
      ease: "power3.out",
    });
    tl.to(
      "body",
      {
        overflow: "hidden",
      },
      "<",
    );
    tl.to(
      "#nav",
      {
        backgroundColor: "#FCFCFC",
        duration: 0,
      },
      "<",
    );
    tl.to(
      "#menu",
      {
        visibility: "visible",
      },
      "<",
    );

    function toggleMenu() {
      tl.reversed() ? tl.play() : tl.reverse();
    }

    const menuToggles = document.querySelectorAll(".menu-toggle");
    menuToggles.forEach((menuToggle) => {
      menuToggle.addEventListener("click", () => toggleMenu());
    });
  }
</script>

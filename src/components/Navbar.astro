---
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
---

<script src="../utils/navAnimation.js"></script>

<nav id="nav" class="fixed top-0 left-0 right-0 text-light z-40">
  <div
    class="px-page py-8 flex items-center justify-between gap-16 relative z-20"
  >
    <a
      href="/"
      class="hover:-translate-y-[2px] ease-out transition duration-300 hover:text-white"
    >
      <Icon name="logo" class="w-32 h-6" />
    </a>
    <div class="flex items-center justify-between flex-grow">
      <menu class="flex items-center gap-12">
        <li
          class="hover:-translate-y-[2px] ease-out transition duration-300 hover:text-white"
        >
          <a href="/#services" class="py-2">Services</a>
        </li>
        <li
          class="hover:-translate-y-[2px] ease-out transition duration-300 hover:text-white"
        >
          <a href="/#projects" class="py-2">Projects</a>
        </li>
        <li
          class="hover:-translate-y-[2px] ease-out transition duration-300 hover:text-white"
        >
          <a href="/" class="py-2">Contact</a>
        </li>
      </menu>
      <Button icon="proposal">Request a Proposal</Button>
    </div>
  </div>
  <div
    id="navBg"
    class="absolute bg-dark-2 inset-0 z-10"
  >
  </div>
</nav>

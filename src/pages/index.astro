---
// Component imports
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Button from "../components/ui/Button.astro";
import Pill from "../components/ui/Pill.astro";
import ServiceCard from "../components/ServiceCard.astro";
import ProjectCard from "../components/ProjectCard.astro";

// Asset imports
import gridLines from "../assets/grid-lines.svg";
import headerTablet from "../assets/header-tablet.png";

// Project images
import lp77 from "../assets/projects/postreria.png";
import pgco from "../assets/projects/pgco.png";
import pasteleria from "../assets/projects/pasteleria.png";
import herrmat from "../assets/projects/herrmat.png";
import wraps from "../assets/projects/wraps.png";
---

<Layout
  title="Fantom | Design & Development"
  description="We develop unique websites to help  brands reach their business goals."
>
  <script src="../utils/homeAnimations.js"></script>
  <main>
    <header
      class="relative flex min-h-screen flex-col items-center justify-between gap-8 overflow-clip bg-gradient-to-b from-g-secondary to-g-primary pt-32"
    >
      <div
        class="relative z-20 flex max-w-3xl flex-grow flex-col items-center justify-center gap-2 text-center"
        id="header-comp"
      >
        <h1 class="font-display text-5xl leading-tight">
          Unique websites that <br /><span class="text-alt"
            >increase conversions</span
          > for brands.
        </h1>
        <p
          class="mb-4 text-balance text-xl font-medium leading-relaxed opacity-60"
        >
          We specialize in building intentionally designed websites that create
          more immersive experiences for your users.
        </p>
        <div>
          <Button intent={"secondary"} icon="proposal"
            >Request a Proposal</Button
          >
        </div>
      </div>
      <Image
        src={headerTablet}
        alt="Tablet mockup that shows good user experience."
        class="relative z-20 w-4/5"
        id="header-tablet"
      />
      <Image
        src={gridLines}
        alt="Decorative grid lines"
        class="absolute left-0 top-0 z-10 w-full"
      />
    </header>
    <section class="pb-32 pt-80">
      <div class="flex flex-col gap-28 px-page">
        <!--Section header conatining title and description -->
        <div id="services" class="scroll-mt-40 flex flex-col items-start gap-3">
          <Pill>Services</Pill>
          <h2 class="font-display text-5xl">
            Everything you need to <span class="text-alt">thrive online</span>
          </h2>
          <p class="text-xl font-medium leading-relaxed opacity-60">
            These are some ways we make every website special and help you stand
            out in the online space.
          </p>
        </div>
        <!--Grid for service cards -->
        <div id="service-cards" class="grid grid-cols-3 gap-24">
          <ServiceCard
            title="Intentional Design"
            description="We make your website with your brand’s goals in mind at every turn to help you achieve them faster."
            icon="int-design"
          />
          <ServiceCard
            title="Advanced Interactions"
            description="From basic to complex animations we help set your site apart by fully leveraging visual storytelling and captivating your users with a high end experience."
            icon="adv-interactions"
          />
          <ServiceCard
            title="Integrations"
            description="Connect your website to tools you love like Notion, Airtable, Google Sheets and more."
            icon="integrations"
          />
          <ServiceCard
            title="Content Creation"
            description="We create hight-quality content for your blog and manage it through a personalized CMS to make your site easily findable."
            icon="content-creation"
          />
          <ServiceCard
            title="SEO optimization"
            description="We audit, optimize and cleanup your website to make it rank faster and higher on search engines and make future endeavors more easily approachable."
            icon="seo"
          />
          <ServiceCard
            title="Analytics"
            description="We track your site’s performance using Google Analytics and other tools to help you understand how your users are interacting with your brand."
            icon="analytics"
          />
        </div>
        <div class="mt-16 flex flex-col items-center gap-2">
          <h3 class="font-display text-xl font-medium">
            We use powerful technologies
          </h3>
          <p class="font-medium opacity-60">
            That will make your website fast, reliable and stand the test of
            time.
          </p>
          <div class="flex gap-8">
            <Icon name="tech/webflow" class="size-12" />
            <Icon name="tech/astro" class="size-12" />
            <Icon name="tech/react" class="size-12" />
            <Icon name="tech/tailwind" class="size-12" />
            <Icon name="tech/vercel" class="size-12" />
            <Icon name="tech/supabase" class="size-12" />
          </div>
        </div>
      </div>
    </section>
    <section class="pb-60 pt-32">
      <div class="flex flex-col gap-20 px-page">
        <!--Section header conatining title and description -->
        <div
          id="projects"
          class="scroll-mt-40 section-header flex flex-col items-center gap-3 text-center"
        >
          <Pill>Projects</Pill>
          <h2 class="font-display text-5xl">
            We believe our work <span class="text-alt">defines us</span>
          </h2>
          <p
            class="max-w-[50ch] text-xl font-medium leading-relaxed opacity-60"
          >
            We focus on making every project tell it’s unique story and help the
            business thrive in the online space.
          </p>
        </div>
        <!--Grid for project cards -->
        <ul id="project-cards" class="group/grid grid grid-cols-3 gap-8">
          <ProjectCard
            title="La Postreria 77"
            siteType="Marketing site"
            image={lp77}
            service="Design & Development"
          />
          <ProjectCard
            title="Party Game Companion"
            siteType="Web app"
            image={pgco}
            service="Design & Development"
          />
          <ProjectCard
            title="La Pasteleria de La Postreria 77"
            siteType="Marketing site"
            image={pasteleria}
            service="Design & Development"
          />
          <ProjectCard
            title="Herrmat"
            siteType="E-commerce site"
            image={herrmat}
            service="Design & Development"
          />
          <ProjectCard
            title="The Wrap Co."
            siteType="Marketing site"
            image={wraps}
            service="Design"
          />
          <ProjectCard
            title="Otra Marca"
            siteType="Web app"
            image={lp77}
            service="Design & Development"
          />
        </ul>
      </div>
    </section>
  </main>
</Layout>
